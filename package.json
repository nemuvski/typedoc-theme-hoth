{
  "name": "typedoc-theme-hoth",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "node": ">= 14"
  },
  "description": "A typedoc theming on Hoth",
  "author": "K.Utsunomiya",
  "keywords": [
    "typedoc-theme"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "typecheck": "tsc --noEmit && tsc --noEmit -p tsconfig.theme.json",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --check './**/*.{scss,js,ts,tsx}'",
    "format:fix": "prettier --write './**/*.{scss,js,ts,tsx}'",
    "checkall": "npm run lint && npm run format && npm run typecheck",
    "prebuild": "npm run checkall && rimraf dist",
    "build": "tsc",
    "postbuild": "rollup -c",
    "prepreview": "rimraf preview && yarn --cwd ./example install --silent --frozen-lockfile && typedoc",
    "preview": "reload --dir=preview --browser"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "autoprefixer": "^10.4.8",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-regexp": "^1.9.0",
    "fs-extra": "^10.1.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "reload": "^3.2.0",
    "rollup": "^2.79.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.54.9",
    "typedoc": "^0.23.14",
    "typescript": "^4.8.2"
  },
  "peerDependencies": {
    "typedoc": "^0.23.14"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
